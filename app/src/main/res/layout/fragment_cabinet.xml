<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:layout_weight="1">

    <LinearLayout
        android:id="@+id/data_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="0dp">

            <FrameLayout
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_margin="0dp">

                <ImageView
                    android:id="@+id/client_profile"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center_horizontal|center_vertical|center"
                    android:adjustViewBounds="true"
                    android:onClick="onClick"
                    android:src="@drawable/upload_photo" />


                <ProgressBar
                    android:id="@+id/client_image_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical|center"
                    android:indeterminateDrawable="@drawable/spinner_png"
                    android:indeterminateOnly="true" />

                <ImageButton
                    android:id="@+id/select"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="0dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/edit_image" />


            </FrameLayout>

        </LinearLayout>
        <!-- Name, Email i t d -->
        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/client_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:text="@string/email"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gender"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/male_or" />

            <TextView
                android:id="@+id/client_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="age"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/client_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:text="totalDisputeMoney"
            android:textColor="@color/orange"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/verify_email_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="asdads"
            android:theme="@style/ThemeOverlay.MyDarkButton"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone" />

        <TextView
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:weightSum="3"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:scrollbarAlwaysDrawHorizontalTrack="false">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/activ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_vertical|center_horizontal"
                    app:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                    app:srcCompat="@drawable/activ" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|fill_horizontal"
                android:orientation="vertical"

                android:layout_weight="1">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                    app:srcCompat="@drawable/white_check" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="1">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/wait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_weight="0.59"
                    app:backgroundTint="@color/common_google_signin_btn_text_dark_disabled"
                    app:srcCompat="@drawable/wait" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/client_spors_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Активные споры" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/clientSpors"
        android:layout_width="match_parent"
        android:layout_height="150dp" />


</LinearLayout>

